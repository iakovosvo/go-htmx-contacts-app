package templates

import "github.com/iakovosvo/go-htmx-contacts-app/services"

templ HomePage(contacts []services.Contact, formData services.FormData) {
	@Layout() {
		<div class=" mt-8 basis-2/3 max-md:basis-full max-md:mx-4 shadow-md">
			<div class="bg-gray-800 rounded-t-3xl p-8">
				@Form(formData)
				<h1 class="font-bold text-5xl text-gray-200 text-center pb-3 mt-8 mb-4">Contacts</h1>
				@ContactList(contacts)
			</div>
		</div>
	}
}
